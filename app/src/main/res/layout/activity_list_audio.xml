<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.playable.frompassiontoaction.ListAudioActivity">

    <RelativeLayout
        android:id="@+id/lm"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgcomment">



        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:textSize="20sp"
            android:id="@+id/textbuku"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="From passion to Action"/>
 <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbuku"
            android:textSize="16sp"
            android:gravity="center"

            android:textColor="@color/white"
     android:text="Edvan M Kautsar"/>

    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        android:layout_below="@+id/lm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bgmenu"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

